#include <dt-bindings/realtek/clock/realtek-amebad2-clock.h>

 / {
	ocp {
		drm:drm@0x400D8000 {
			compatible = "realtek,amebad2-drm";
			reg = <0x400D8000 0xE0>;
			interrupts = <GIC_SPI 33 IRQ_TYPE_LEVEL_HIGH>;
			clocks = <&rcc RTK_CKE_LCDCMIPI>;
			memory-region = <&mem_drm_reserved>;

			port {
				lcdc_out: endpoint {
					remote-endpoint = <&dsi_in>;
				};
			};
		};

		dsi: dsi@0x400EA000 {
			compatible = "realtek,amebad2-dsi";
			reg = <0x400EA000 0xC10>;
			interrupts = <GIC_SPI 70 IRQ_TYPE_LEVEL_HIGH>;

			pinctrl-names="default";
			pinctrl-0 = <&drm_disable_swd_pins>;
			mipi-gpios = <&gpioa 14 0>;

		        // 0 for input port
			port {
					dsi_in: endpoint {
						remote-endpoint = <&lcdc_out>;
				};
			};
		};
	};
};
