/*
 * Realtek Semiconductor Corp.
 *
 * Device Tree Structure
 */

/dts-v1/;

#include "rtl8730e.dtsi"
#include "rtl8730e-spi-nand-128m.dtsi"
#include "rtl8730e-drm.dtsi"

/ {
	memory {
		device_type = "memory";
		// DRAM base address should be 1MB-aligned.
		reg = <0x60300000 0x7D00000>;  // 128MB -- exclude 3MB secure memory
	};
	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;
		// reserver 32M mem for drm graphics , from 0x61000000 to 0x63000000
		mem_drm_reserved: drm_buffer@0x61000000 {
			compatible = "shared-dma-pool";
			no-map;
			reg = <0x61000000 0x2000000>;
			//linux,cma-default;
		};
	};
};

// Configure pinmux, avoid the pin conflict.

&i2c0{
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins_a>;
	status = "disabled";
};

&i2c1{
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins_a>;
	status = "disabled";
};

&i2c2{
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	pinctrl-0 = <&i2c2_pins_b>;
	status = "okay";

	rtk_ts@1a {
		compatible = "realtek,rtk_ts";
		reg = <0x1a>;
		ts-reset-gpios = <&gpioa 10 0>;
		ts-irq-gpios = <&gpioa 9 0>;
		max-touch-number = <5>;
		ts-display-coords = <480 800>;
	};
};

&spi0{
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins_c>;
	status = "okay";
};

&spi1{
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";
};

&ir{
	pinctrl-names = "default";
	pinctrl-0 = <&ir_pins_a>;
	status = "disabled";
};

&sport2 {
	rtk,sport-multi-io = <1>;
	rtk,sport-mode = <1>;
	rtk,sport-mclk-multiplier = <256>;
};

&sport3 {
	rtk,sport-multi-io = <1>;
	rtk,sport-mode = <0>;
	rtk,sport-mclk-multiplier = <0>;
};